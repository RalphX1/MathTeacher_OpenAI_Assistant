# Rename this file to .env and fill in your values

# Required: Your OpenAI API key
OPENAI_API_KEY="your-api-key-here"

# Optional: Reuse an existing assistant instead of creating a new one each time
# After first run, the app will display the assistant ID - copy it here to reuse
OPENAI_ASSISTANT_ID=""

# Optional: Model to use (default: gpt-4-turbo)
# Options: gpt-4-turbo, gpt-4, gpt-3.5-turbo, etc.
OPENAI_MODEL="gpt-4-turbo"

# Optional: Customize the assistant
ASSISTANT_NAME="Math Tutor"
ASSISTANT_INSTRUCTIONS="You are a personal math tutor. Write and run code to answer math questions."

# Optional: Polling configuration (in milliseconds)
POLLING_INTERVAL_MS=1000
POLLING_TIMEOUT_MS=120000
MAX_POLLING_RETRIES=60
